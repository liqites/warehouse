<h2>零件类型列表</h2>

<%= link_to "新建零件类型", send("new_#{@model}_path") %>
<%= link_to "上传/更新零件类型", send("import_#{@model.pluralize}_path") %>
<%= link_to "下载零件类型", send("download_#{@model.pluralize}_path") %>
 <br/>
<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @parts %>
  </div>
  <%= will_paginate @parts, :container => false %>
</div>
<table class="table table-bordered table-striped globle-table">

  <thead>
    <tr>
      <th>ID</th>
      <th>名称</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @part_types.each do |part_type| %>
      <tr>
        <td><%= part_type.id %></td>
        <td><%= part_type.name %></td>
        <td><%= link_to '编辑', edit_part_type_path(part_type) %></td>
        <td><%= link_to '删除', part_type, method: :delete, data: { confirm: '确认删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= will_paginate @parts, :container => false %>
</div>
