<h1>客户列表</h1>

<table class="table table-bordered table-striped globle-table">
  <thead>
    <tr>
      <th>公司名称</th>
      <th>编码</th>
      <th>简称</th>
      <th>地址</th>
      <th>邮件</th>
      <th>电话</th>
      <th>网址</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tenants.each do |tenant| %>
      <tr>
        <td><%= tenant.name %></td>
        <td><%= tenant.code %></td>
        <td><%= tenant.short_name %></td>
        <td><%= tenant.address %></td>
        <td><%= tenant.email %></td>
        <td><%= tenant.tel %></td>
        <td><%= tenant.website %></td>
        <td><%= link_to '编辑', edit_tenant_path(tenant) %></td>
		<td><%= link_to '删除', tenant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<td><%= link_to '零件',tenant_part_clients_path(tenant)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

