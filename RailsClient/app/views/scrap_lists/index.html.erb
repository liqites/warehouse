<style>
    .col-sm-12 {
        height: 40px;
    }

    .table > thead > tr > th, .table > tbody > tr > td {
        text-align: center;
    }

    .IconA {
        margin: 0 10px;
        font-size: 1.2em;
    }

    .IconA:hover {
        text-decoration: none;
        background-color: white;
    }
    
    a:hover, a:active {
        text-decoration: none;
        background-color: white;
        color: black;
        outline: none;
    }
</style>

<div class="panel panel-default">
  <ol class="breadcrumb" style="background: transparent;padding: 20px 0 0 20px;font-size: 1.2em;">
    <li class="active">库存管理</li>
    <li class="active">
      报废生成
    </li>
    <li class="active">
      报废单
    </li>
  </ol>
</div>

<div class="col-sm-12">
  <div class="col-sm-4">
    <% if current_user.can_edit_inventory? %>
        <%= link_to '新建报废单', new_scrap_list_path, :class => 'btn btn-primary', :style => 'color:white;width:200px;' %>
    <% end %>
  </div>
  <div class="col-sm-4">
    <%= link_to '生成报表', scrap_lists_reports_path, :class => 'btn btn-primary', :style => 'color:white;width:200px;' %>
  </div>
</div>


<div class="col-sm-12" style="margin-top: 20px;">
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @scrap_lists %>
    </div>
    <%= will_paginate @scrap_lists, :container => false %>
  </div>
</div>


<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th>NO.</th>
    <th>名称/备注</th>
    <th>源仓库</th>
    <th>目的仓库</th>
    <th>创建者</th>
    <th>创建时间</th>
    <th colspan="3">操作</th>
  </tr>
  </thead>

  <tbody>
  <% @scrap_lists.each_with_index do |scrap_list, i| %>
      <tr>
        <td><%= i+@scrap_lists.offset+1 %></td>
        <td><%= best_in_place scrap_list, :name, as: :input %></td>
        <td><%= scrap_list.src_warehouse %></td>
        <td><%= scrap_list.dse_warehouse %></td>
        <td><%= scrap_list.builder %></td>
        <td><%= scrap_list.created_at.localtime %></td>
        <td>
          <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-eye-open', :style => 'color:green;'), scrap_list, :title => '详细', :class => 'IconA' %>

          <% if current_user.can_edit_inventory? %>

              <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-import', :style => 'color:black'), new_scrap_list_item_path(id: scrap_list.id), :title => '导入报废', :class => 'IconA' %>

              <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-trash', :style => 'color:darkred;'), scrap_list, method: :delete, data: {confirm: 'Are you sure?'}, :title => '删除', :class => 'IconA' %>
          <% end %>

        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= will_paginate @scrap_lists, :container => false %>
</div>
