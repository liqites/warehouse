<h2>地点列表</h2>

<%= link_to "新建地点", send("new_#{@model}_path") %>
<%= link_to "上传/更新地点", send("import_#{@model.pluralize}_path") %>
<%= link_to "下载", send("download_#{@model.pluralize}_path") %>

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @locations %>
  </div>
  <%= will_paginate @locations, :container => false %>
</div>
<table class="table table-bordered table-striped globle-table">
  <thead>
  <tr>
    <th>序号</th>
    <th>编号</th>
    <th>名称</th>
    <th>目的地</th>
    <th>所有员工</th>
    <th>所有仓库</th>
    <th colspan="3">&nbsp;</th>
  </tr>
  </thead>

  <tbody>
  <% @locations.each_with_index do |location, index| %>
      <tr>
        <td><%= index+@locations.offset+1 %>
        <td><%= location.id %></td>
        <td><%= location.name %></td>
        <td><%= location.destination.name if location.destination %></td>
        <td><%= link_to '员工', users_location_path(location) %> <span class="badge"><%= location.users.count%></td>
        <td><%= link_to '仓库', whouses_location_path(location) %> <span class="badge"><%= location.whouses.count%></span></td>
        <td><%= link_to '详细', location ,:class=> 'btn btn-default'%></td>
        <td><%= link_to '编辑', edit_location_path(location),:class=> 'btn btn-default' %></td>
        <td><%= link_to '删除', location, method: :delete, data: {confirm: '确认删除?'},:class=> 'btn btn-default' %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>
<div class="digg_pagination">
  <%= will_paginate @locations, :container => false %>
</div>
