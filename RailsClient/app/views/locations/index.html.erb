<h2>地点列表</h2>

<% if current_user.permission?(:operate_basic_info_create) %>
    <%= link_to "新建地点", send("new_#{@model}_path"), :class => 'btn btn-default' %>
    <%= link_to "上传/更新地点", send("import_#{@model.pluralize}_path"), :class => 'btn btn-default' %>
<% end %>
<%= link_to "下载", send("download_#{@model.pluralize}_path"), data: {confirm: 'Are you sure?'}, :class => 'btn btn-default' %>

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @locations %>
  </div>
  <%= will_paginate @locations, :container => false %>
</div>
<table class="table table-bordered table-striped globle-table">
  <thead>
  <tr>
    <th>序号</th>
    <th>编号</th>
    <th>名称</th>
    <th>目的地</th>
    <th>接收仓库</th>
    <th>在途仓库</th>
    <th>运单接收模式</th>
    <th>所有员工</th>
    <th>所有仓库</th>
    <th>所属公司</th>
    <th>地址</th>
    <th colspan="4">&nbsp;</th>
  </tr>
  </thead>

  <tbody>
  <% @locations.each_with_index do |location, index| %>
      <tr>
        <td><%= index+@locations.offset+1 %>
        <td><%= location.nr %></td>
        <td><%= location.name %></td>
        <td>
          <ul>
            <% location.destinations.each do |d| %>
                <li><%= d.name %></li>
            <% end %>
          </ul>
        </td>
        <td>
          <%= location.receive_whouse.name if location.receive_whouse %>
        </td>
        <td>
          <%= location.send_whouse.name if location.send_whouse %>
        </td>
        <td>
          <%= DeliveryReceiveMode.display(location.receive_mode) %>
        </td>
        <td><%= link_to '员工列表', users_location_path(location) %>
          <span class="badge pull-right"><%= location.users.count %></td>
        <td><%= link_to '仓库列表', whouses_location_path(location) %>
          <span class="badge pull-right"><%= location.whouses.count %></span></td>
        <td><%= location.tenant.name if location.tenant %></td>
        <td><%= location.address %></td>
        <td><%= link_to '详细', location, :class => 'btn btn-default' %></td>
        <% if current_user.permission?(:operate_basic_info_edit) %>
            <td><%= link_to '编辑', edit_location_path(location), :class => 'btn btn-default' %></td>
            <td><%= link_to '编辑目的地', destinations_location_path(location), :class => 'btn btn-default' %></td>
        <% end %>
        <% if current_user.permission?(:operate_basic_info_delete) %>
            <td><%= link_to '删除', location, method: :delete, data: {confirm: '确认删除?'}, :class => 'btn btn-default' %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
<br>
<div class="digg_pagination">
  <%= will_paginate @locations, :container => false %>
</div>

