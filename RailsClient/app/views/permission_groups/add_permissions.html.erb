<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th>序号</th>
    <th>权限名称</th>
    <th>状态</th>
  </tr>
  </thead>

  <tbody>
  <% @permissions.each_with_index do |p, index| %>
      <tr>
        <td><%= index+1 %>
        <td><%= p[:name] %></td>
        <td><%= p[:status] %></td>
      </tr>
  <% end %>
  </tbody>
</table>