<!--<h2>托盘列表</h2>-->
<style>
    .col-sm-12 {
        height: 40px;
    }

    .col-sm-12:first-child {
        margin-top: 20px;
    }

    select {
        width: 150px;
    }

    .up_search {
        text-align: center;
        cursor: pointer;
    }

    .digg_pagination .page_info {
        text-align: left;
        width: auto;
        margin-left: -20px;
        margin-right: -20px;
    }

    .digg_pagination {
        background: transparent;
    }

    .IconA {
        margin: 0 10px;
        font-size: 1.2em;
    }

    .IconA:hover {
        text-decoration: none;
        background-color: white;
    }

    .table > thead > tr > th, .table > tbody > tr > td {
        text-align: center;
    }
</style>
<div class="all-search">
  <form method="get" action="<%= send("search_logistics_containers_path") %>">
    <div class="col-sm-12">
      <div class="col-sm-6">
        托清单号：
        <input type="text" name="forklift[container_id]" value="<%= @forklift_container_id %>"/>
        <input type="hidden" name="forklift[container_id_fuzzy]"/>
      </div>
      <div class="col-sm-6">
        备货员工号：
        <input type="text" name="forklift[user_id]" value="<%= @forklift_user_id %>"/>
        <input type="hidden" name="forklift[user_id_fuzzy]"/>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="col-sm-6">
        状  态：
        <%= select 'forklift', 'state', MovableState.state, selected: @forklift_state, include_blank: true %>
      </div>
      <div class="col-sm-6">
        创建日期： 
        <input type="text" name="forklift[created_at][start]" class="datepicker" value="<%= @forklift_created_at_start %>"/>
        ~
        <input type="text" name="forklift[created_at][end]" class="datepicker" value="<%= @forklift_created_at_end %>"/>
      </div>
    </div>


    <div class="col-sm-12">
      <div class="col-sm-10">
        <h4 style="margin-top: 0;">
          根据操作记录
          <hr style="border-bottom: 1px dashed #000;margin: -10px 0 0 120px">
        </h4>
      </div>

      <div class="col-sm-2" style="text-align: right;">
        <input type="hidden" value="forklift" name="model"/>
        <input type="hidden" value="records" name="tables"/><!--使用分号隔开，这里的表应该与上面的参数一致-->
        <input type="submit" value="查 找" class="btn btn-primary" style="width: 150px;height: 50px;margin-top: -20px;"/>
      </div>
    </div>

    <div class="col-sm-12" style="border-bottom: 1px solid #CCCCCC;">
      <div class="col-sm-3">
        员工号：
        <input type="text" name="records[impl_id]" value="<%= @records_impl_id %>"/>
        <input type="hidden" name="records[impl_id_fuzzy]"/>
      </div>
      <div class="col-sm-3">
        操 作：
        <%= select 'records', 'impl_user_type', ImplUserType.list_action_menu, selected: @records_impl_user_type, include_blank: true %>
      </div>
      <div class="col-sm-6">
        时  间：
        <input type="text" name="records[impl_time][start]" class="datepicker" value="<%= @records_impl_time_start %>"/>
        ~ <input type="text" name="records[impl_time][end]" class="datepicker" value="<%= @records_impl_time_end %>"/>
      </div>
    </div>

    <!--<div>
      <input type="hidden" value="forklift" name="model"/>
      <input type="hidden" value="records" name="tables"/>
      &lt;!&ndash;使用分号隔开，这里的表应该与上面的参数一致&ndash;&gt;
      <input type="submit" value="查找" class="btn btn-primary" name="search"/>
      &lt;!&ndash;<input type="submit" value="下载为Excel" class="btn btn-primary" data-confirm="Are you sure?" name="download"/>&ndash;&gt;
    </div>-->
  </form>
</div>

<div class="col-sm-12 up_search">
  <i class=" glyphicon glyphicon-chevron-up" title="收起搜索条件"></i>
</div>


<div class="col-sm-12" style="margin-top: -30px;">
  <input type="button" value="打印托清单" class='btn btn-warning' onclick="print_forklift_list();"/>

  <% if current_user.can_edit_inventory? %>
      <%= link_to '导入离线托清单', import_logistics_containers_path, :class => "btn btn-warning", :style => 'color:white;' %>
  <% end %>
</div>

<div class="col-sm-12">
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @forklifts %>
    </div>
    <%= will_paginate @forklifts, :container => false %>
  </div>
</div>

<table class="table table-bordered table-striped table-hover">
  <thead>
  <tr>
    <th></th>
    <th>序号</th>
    <th>托清单号</th>
    <th>状态</th>
    <th>所属运单</th>
    <th>目标仓库</th>
    <th>备注</th>
    <th>包装箱列表</th>
    <th>包装箱总数</th>
    <th>已接收包装箱数</th>
    <th>最新记录</th>
    <th colspan="3">操作</th>
  </tr>
  </thead>

  <tbody>
  <% @forklifts.each_with_index do |forklift, index| %>
      <% fpresenter = ForkliftPresenter.new(forklift) %>
      <tr>
        <td><input type="checkbox" id="<%= forklift.id %>" class='print-check'></td>
        <td><%= index+@forklifts.offset+1 %>
        <td><%= forklift.container_id %></td>
        <td><%= forklift.state_display %></td>
        <td>
          <%= link_to content_tag(:span, forklift.parent.container_id, :class => 'label label-primary', :style => 'font-size:1em;'), delivery_path(forklift.parent) if forklift.parent %>
        </td>
        <td><%= forklift.destinationable.name if forklift.destinationable %></td>
        <td><%= forklift.remark %></td>
        <td>
          <%= link_to content_tag(:span, fpresenter.packages.count, :class => 'label label-primary', :style => 'font-size:1em;'), packages_forklift_path(forklift) %>
        </td>
        <td><%= fpresenter.sum_packages %></td>
        <td><%= fpresenter.accepted_packages %></td>

        <td><%= forklift.get_records.last.display %></td>

        <td>
          <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-eye-open', :style => 'color:green;'), forklift_path(forklift), :title => '托清单详情', :class => 'IconA' %>

          <% if current_user.permission?(:operate_delivery) %>
              <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-pencil', :style => 'color:#4F94CD;'), edit_forklift_path(forklift), :class => 'IconA', :title => '编辑托清单' if current_user.admin? %>
          <% end %>

          <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-log-out'), {controller: 'logistics_containers', action: 'export', id: forklift.id}, class: 'IconA', :title => '导出托清单' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= will_paginate @forklifts, :container => false %>
</div>

<script>
    $(function () {
        $(".datepicker").datetimepicker({
            lang: 'ch',
            format: 'Y-m-d H:i'
        });
    });
    init_check();

    $('.up_search').click(function () {
        var this_arrow = $(this);
        $('.all-search').slideToggle(300, function () {
            if (this_arrow.children('i').hasClass('glyphicon-chevron-up')) {
                this_arrow.children('i').attr('class', 'glyphicon glyphicon-chevron-down');
                this_arrow.children('i').attr('title', '展开搜索条件');
            } else {
                this_arrow.children('i').attr('class', 'glyphicon glyphicon-chevron-up');
                this_arrow.children('i').attr('title', '收起搜索条件');
            }
        });
    })
</script>
