<h1>零件单位列表</h1>

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @units %>
  </div>
  <%= will_paginate @units, :container => false %>
</div>

<%= link_to '新建零件单位', send("new_#{@model}_path"), :class => 'btn btn-default' %>
<%= link_to '导入数据', import_units_path, :class => 'btn btn-default' %>


<table class="table table-bordered table-striped table-hover">
  <thead>
  <tr>
    <th>编号</th>
    <th>单位编号</th>
    <th>名称</th>
    <th>简称</th>
    <th>描述</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @units.each_with_index do |unit, i| %>
      <tr>
        <td><%= i+@units.offset+1 %></td>
        <td><%= unit.nr %></td>
        <td><%= unit.name %></td>
        <td><%= unit.short_name %></td>
        <td><%= unit.description %></td>
        <td>
          <%= link_to '[详情]', unit %>
          <%= link_to '[编辑]', edit_unit_path(unit) %>
          <%= link_to '[删除]', unit, method: :delete, data: {confirm: '确定删除?'} %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

