<style>
    .table > thead > tr > th, .table > tbody > tr > td {
        text-align: center;
    }

    a:hover, a:active {
        text-decoration: none;
        background-color: white;
        color: black;
        outline: none;
    }

    .label {
        font-size: 1em;
    }

    .IconA {
        margin: 0 10px;
        font-size: 1.2em;
    }

    .IconA:hover {
        text-decoration: none;
        background-color: white;
    }
</style>

<div class="panel panel-default">
  <ol class="breadcrumb" style="background: transparent;padding: 20px 0 0 20px;font-size: 1.2em;">
    <li class="active">管理</li>
    <li class="active">
      基础信息设置
    </li>
    <li>
      <%= link_to '容器列表', wrappages_path %>
    </li>
    <li class="active">
      容器零件对应关系列表
    </li>
  </ol>
</div>

<div class="col-sm-12" style="margin-top: 10px;margin-bottom: 20px;">
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @part_wrappages %>
    </div>
    <%= will_paginate @part_wrappages, :container => false %>
  </div>
</div>

<table class="table table-hover table-bordered">
  <thead>
  <tr>
    <th>容器编码</th>
    <th>零件号</th>
    <th>容器容量</th>
  </tr>
  </thead>

  <tbody>
  <% @part_wrappages.each do |part_wrappage| %>
      <tr>
        <td><%= part_wrappage.wrappage.nr %></td>
        <td><%= part_wrappage.part.nr %></td>
        <td><%= part_wrappage.capacity %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= will_paginate @part_wrappages, :container => false %>
</div>