<h2>零件列表</h2>
<% if @msg && !@msg.result %>
    <div class="error">
      <%= @msg.content %>
    </div>
<% end %>
<div>
  <form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">
    <div>
      <span>零件号：
        <input type="text" name="part[id]" value="<%= @id %>"/>
        <input type="hidden" name="part[id_fuzzy]"/>
      </span>
      <span>  零件类型：
           <%=  select_tag('part[part_type_id]',options_from_collection_for_select(@part_types,'id','name',@part_type_id), include_blank: true)%>
      </span>
      <input type="submit" value="查 找" class="btn btn-primary"/>
    </div>
</form>
</div>

<%= link_to "新建零件", send("new_#{@model}_path") %>
<%= link_to "上传/更新零件", send("import_#{@model.pluralize}_path") %>
<%= link_to "下载零件", send("download_#{@model.pluralize}_path") %>
<%= link_to "上传/更新零件位置", parts_import_positions_path %>
<%= link_to "下载零件位置", parts_download_positions_path %>
<br>
<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @parts %>
  </div>
  <%= will_paginate @parts, :container => false %>
</div>
<table class="table table-bordered table-striped globle-table">
  <thead>
  <tr>
    <th>序号</th>
    <th>零件号</th>
    <th>零件类型</th>
    <th>单位包装量</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @parts.each_with_index do |part, index| %>
      <tr>
        <td><%= index+@parts.offset+1 %>
        <td><%= part.id %></td>
        <td><%= part.part_type_id %></td>
        <td><%= part.unit_pack %></td>
        <td><%= link_to '详细', part %></td>
        <td><%= link_to '编辑', edit_part_path(part) %></td>
        <td><%= link_to '删除', part, method: :delete, data: {confirm: '确认删除?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @parts, :container => false %>
</div>