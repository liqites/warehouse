<h1>Listing positions</h1>

<%= link_to "新建库位", send("new_#{@model}_path") %>
<%= link_to "上传/更新库位", send("import_#{@model.pluralize}_path") %>
<%= link_to "下载", send("download_#{@model.pluralize}_path") %>

<br>

<table>
  <thead>
    <tr>
      <th colspan="3">No</th>
      <th colspan="3">ID</th>
      <th colspan="3">Detail</th>
      <th colspan="3">Ware House</th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each_with_index do |position,index| %>
      <tr>
        <td colspan="3"><%= index %>
        <td colspan="3"><%= position.id%></td>
        <td colspan="3"><%= position.detail%></td>
        <td colspan="3"><%= position.whouse.name %></td>
        <td><%= link_to 'Show', position %></td>
        <td><%= link_to 'Edit', edit_position_path(position) %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @positions, :page_links => false %>

