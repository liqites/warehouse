<style>
    .IconA {
        margin: 0 10px;
        font-size: 1.2em;
    }

    .IconA:hover {
        text-decoration: none;
        background-color: white;
    }

    .table > thead > tr > th, .table > tbody > tr > td {
        text-align: center;
    }

    a:hover, a:active {
        text-decoration: none;
        background-color: white;
        color: black;
        outline: none;
    }
</style>

<div class="panel panel-default">
  <ol class="breadcrumb" style="background: transparent;padding: 20px 0 0 20px;font-size: 1.2em;">
    <li class="active">库存管理</li>
    <li class="active">
      包装物流转记录
    </li>
    <li class="active">
      包装物流转记录列表
    </li>
  </ol>
</div>

<div class="col-sm-12" style="margin-bottom: 20px; text-align: center;">
  <!--<div class="col-sm-6">-->
  <!--<%= link_to '新建包装物流转记录', new_wrappage_movement_path, :class => 'btn btn-primary', :style => 'color:white;' %>-->
  <!--</div>-->
  <div class="col-sm-6">
    <%= link_to "导入包装物流转记录", send("import_#{@model.pluralize}_path"), :class => 'btn btn-primary', :style => 'color:white;' %>
  </div>
</div>

<div class="col-sm-12" style="margin-top: -10px;margin-bottom: 20px;">
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @wrappage_movements %>
    </div>
    <%= will_paginate @wrappage_movements, :container => false %>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th>NO.</th>
    <th>流转日期</th>
    <th>包装物类型</th>
    <th>记录员工号</th>
    <th>列表</th>
    <th>操作</th>
  </tr>
  </thead>

  <tbody>
  <% @wrappage_movements.each_with_index do |wrappage_movement, i| %>
      <tr>
        <td><%= i+@wrappage_movements.offset+1 %></td>
        <td><%= wrappage_movement.move_date %></td>
        <td><%= wrappage_movement.package_type.name %></td>
        <td><%= wrappage_movement.user.blank? ? '' : wrappage_movement.user.nr %></td>
        <td>
          <%= link_to content_tag(:span, '详细列表', :class => 'label label-primary'), wrappage_movement_items_wrappage_movement_path(wrappage_movement) %>
          <span class="badge"><%= wrappage_movement.wrappage_movement_items.count %></span>
        </td>
        <td>
          <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-eye-open', :style => 'color:green;'), wrappage_movement, :title => '详细', :class => 'IconA' %>
          <!--<%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-pencil', :style => 'color:#4F94CD'), edit_wrappage_movement_path(wrappage_movement), :title => '编辑', :class => 'IconA' %>-->
          <% if current_user.permission?(:operate_wrappage_movement_delete) %>
              <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-trash', :style => 'color:darkred;'), wrappage_movement, method: :delete, data: {confirm: 'Are you sure?'}, :title => '删除', :class => 'IconA' %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @wrappage_movements, :container => false %>
</div>