<h2>库存查询</h2>
<div>
  <form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">
    <div>
      <div>
        <div>
            <span>零件号：
              <input type="text" name="n_storage[partNr]" value="<%= @partNr %>"/>
              <input type="hidden" name="n_storage[partNr_fuzzy]"/>
            </span>

            <span>仓库号：
              <%= select_tag('n_storage[ware_house_id]', options_from_collection_for_select(Whouse.all, :name, :id, @ware_house_id), include_blank: true) %>
            </span>

            <span>库位号：
              <input type="text" name="n_storage[position]" value="<%= @position %>"/>
              <input type="hidden" name="n_storage[position_fuzzy]"/>
            </span>
            <span>包装号：
              <input type="text" name="n_storage[packageId]" value="<%= @packageId %>"/>
              <input type="hidden" name="n_storage[packageId_fuzzy]"/>
            </span>
        </div>
        <div>
            <span>
              创建日期：
              <input type="text" name="n_storage[created_at][start]" class="datepicker" value="<%= @created_at_start %>"/>
              ~  <input type="text" name="n_storage[created_at][end]" class="datepicker" value="<%= @created_at_end %>"/>
            </span>
            <span>
              FIFO：
              <input type="text" name="n_storage[fifo][start]" class="datepicker" value="<%= @fifo_start %>"/>
              ~  <input type="text" name="n_storage[fifo][end]" class="datepicker" value="<%= @fifo_end %>"/>
            </span>
        </div>
        <div>
          <input type="submit" value="查找" class="btn btn-primary" name="search"/>
        </div>
      </div>
    </div>
  </form>
</div>

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @n_storages %>
  </div>
  <%= will_paginate @n_storages, :container => false %>
</div>
<table class="table table-striped table-condensed table-hover">
  <thead>
  <tr>
    <th>NO.</th>
    <th>零件号</th>
    <th>包装号</th>
    <th>库存量</th>
    <th>FIFO</th>
    <th>入库时间</th>
    <th>仓库</th>
    <th>库位</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @n_storages.each_with_index do |storage, i| %>
      <tr>
        <td><%= i+@n_storages.offset+1 %></td>
        <td><%= storage.partNr %></td>
        <td><%= storage.packageId %></td>
        <td><%= storage.qty %></td>
        <td><%= storage.fifo.localtime if storage.fifo %> </td>
        <td><%= storage.created_at.localtime if storage.created_at %> </td>
        <td><%= storage.ware_house_id %></td>
        <td><%= storage.position %></td>
        <td><%= link_to '编辑', edit_n_storage_path(storage), :class => 'btn btn-default' %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @n_storages, :container => false %>
</div>

<script>
    $(function () {
        $(".datepicker").datetimepicker({
            lang: 'ch',
            format: 'Y-m-d H:i'
        });
    });
    init_check();
</script>