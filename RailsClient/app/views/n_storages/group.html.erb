<style>
    .col-sm-12 {
        height: 40px;
        line-height: 40px;
    }

    .datepicker {
        width: 150px;
    }

    .table > thead > tr > th, .table > tbody > tr > td {
        text-align: center;
    }

    .up_search {
        text-align: center;
        cursor: pointer;
        margin: -10px 0 -5px 0;
    }
</style>

<div class="panel panel-default">
  <ol class="breadcrumb" style="background: transparent;padding: 20px 0 0 20px;font-size: 1.2em;">
    <li class="active">库存管理</li>
    <li class="active">
      库存查询
    </li>
    <li class="active">
      库存汇总查询
    </li>
  </ol>
</div>
<div class="all-search">
  <form method="get" action="<%= exports_n_storages_path %>">
    <div class="col-sm-12">
      <div class="col-sm-4">
        零件号：
        <input type="text" name="n_storage[partNr]" value="<%= @partNr %>"/>
        <input type="hidden" name="n_storage[partNr_fuzzy]"/>
      </div>
      <div class="col-sm-4">
        仓库号：
        <%= select_tag('n_storage[ware_house_id]', options_from_collection_for_select(Whouse.all, :name, :id, @ware_house_id), include_blank: true) %>
      </div>
      <div class="col-sm-4">
        库位号：
        <input type="text" name="n_storage[position]" value="<%= @position %>"/>
        <input type="hidden" name="n_storage[position_fuzzy]"/>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="col-sm-4">
        唯一码：
        <input type="text" name="n_storage[packageId]" value="<%= @packageId %>"/>
        <input type="hidden" name="n_storage[packageId_fuzzy]"/>
      </div>
      <div class="col-sm-4">
        更新日期：
        <input type="text" name="n_storage[updated_at][start]" class="datepicker" value="<%= @updated_at_start %>"/>
        ~ <input type="text" name="n_storage[updated_at][end]" class="datepicker" value="<%= @updated_at_end %>"/>
      </div>
      <div class="col-sm-4">
        FIFO：
        <input type="text" name="n_storage[fifo][start]" class="datepicker" value="<%= @fifo_start %>"/>
        ~ <input type="text" name="n_storage[fifo][end]" class="datepicker" value="<%= @fifo_end %>"/>
      </div>
    </div>
    <div class="col-sm-12" style="margin-bottom: 10px;">
      <div class="col-sm-4">
        数量：
        <input type="number" name="n_storage[qty][start]" value="<%= @qty_start %>" style="width: 150px;"/>
        ~ <input type="number" name="n_storage[qty][end]" value="<%= @qty_end %>" style="width: 150px;"/>
        </span>
      </div>
      <div class="col-sm-4">
        <span class="label label-info">显示方式:</span>
        <%= select_tag :format, options_for_select([["Web", "html"], ["Excel File(MS 07 or later)", "xlsx"]], "html") %>
      </div>
      <div class="col-sm-4">
        <input type="submit" value="负库存" class="btn btn-primary" name="negative" style="width: 100px;margin-right: 20px;"/>
        <input type="submit" value="汇总" class="btn btn-primary" name="search" style="width: 100px;"/>
      </div>
    </div>
  </form>
</div>

<div class="col-sm-12 up_search">
  <i class=" glyphicon glyphicon-chevron-up" title="收起搜索条件"></i>
</div>

<% if @n_storages.present? %>
    <div class="digg_pagination">
      <div class="page_info">
        <%= page_entries_info @n_storages %>
      </div>
      <%= will_paginate @n_storages, :container => false %>
    </div>
<% end %>

<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th>零件号</th>
    <th>唯一码</th>
    <th>库存总量</th>
    <th>FIFO</th>
    <th>更新日期</th>
    <th>仓库号</th>
    <th>库位号</th>
    <!--<th></th>-->
  </tr>
  </thead>
  <tbody>
  <% if @n_storages.present? %>
      <% @n_storages.each do |storage| %>
          <tr>
            <td><%= storage.part.nr if storage.part.present? %></td>
            <td><%= storage.packageId %></td>
            <td><%= storage.total_qty %></td>
            <td><%= storage.fifo.localtime if storage.fifo %> </td>
            <td><%= storage.updated_at.localtime if storage.updated_at %> </td>
            <td><%= storage.whouse.nr if storage.whouse.present? %></td>
            <td><%= storage.position.nr if storage.position.present? %></td>
            <!--<td><%= link_to '编辑', edit_n_storage_path(storage), :class => 'btn btn-default' %></td>-->
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>
<% if @n_storages.present? %>
    <div class="digg_pagination">
      <%= will_paginate @n_storages, :container => false %>
    </div>
<% end %>
<script>
    $(function () {
        $(".datepicker").datetimepicker({
            lang: 'ch',
            format: 'Y-m-d H:i'
        });
    });
    init_check();

    $('.up_search').click(function () {
        var this_arrow = $(this);
        $('.all-search').slideToggle(300, function () {
            if (this_arrow.children('i').hasClass('glyphicon-chevron-up')) {
                this_arrow.children('i').attr('class', 'glyphicon glyphicon-chevron-down');
                this_arrow.children('i').attr('title', '展开搜索条件');
            } else {
                this_arrow.children('i').attr('class', 'glyphicon glyphicon-chevron-up');
                this_arrow.children('i').attr('title', '收起搜索条件');
            }
        });
    })
</script>
