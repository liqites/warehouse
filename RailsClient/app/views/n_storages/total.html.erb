<style>
    .col-sm-12 {
        height: 40px;
        line-height: 40px;
    }

    .datepicker {
        width: 150px;
    }

    .table > thead > tr > th, .table > tbody > tr > td {
        text-align: center;
    }

    .up_search {
        text-align: center;
        cursor: pointer;
        margin: -10px 0 -5px 0;
    }

    a:hover, a:active {
        text-decoration: none;
        background-color: white;
        color: black;
        outline: none;
    }
</style>

<div class="panel panel-default">
  <ol class="breadcrumb" style="background: transparent;padding: 20px 0 0 20px;font-size: 1.2em;">
    <li class="active">库存管理</li>
    <li class="active">
      库存查询
    </li>
    <li class="active">
      库存零件角度汇总查询
    </li>
  </ol>
</div>
<div class="all-search">
  <form method="get" action="<%= total_n_storages_path %>">
    <div class="col-sm-12">
      <div class="col-sm-3">
        零件号：
        <input type="text" name="n_storage[partNr]" value="<%= @partNr %>"/>
      </div>
      <div class="col-sm-3">
        包装类型：
        <%= select_tag('part[package_type]', options_from_collection_for_select(PackageType.all, :id, :name, @package_type), include_blank: true) %>
      </div>
      <div class="col-sm-3">
        FIFO：
        <input type="text" name="n_storage[fifo][start]" class="datepicker" value="<%= @fifo_start %>"/>
        ~ <input type="text" name="n_storage[fifo][end]" class="datepicker" value="<%= @fifo_end %>"/>
      </div>
    </div>
    <div class="col-sm-12" style="margin-bottom: 10px;">
      <div class="col-sm-4">
        <input type="submit" value="汇总" class="btn btn-primary" name="search" style="width: 100px;"/>
        <input type="submit" value="导出" class="btn btn-primary" name="download" style="width: 100px;"/>
      </div>
    </div>
  </form>
</div>

<div class="col-sm-12 up_search">
  <i class=" glyphicon glyphicon-chevron-up" title="收起搜索条件"></i>
</div>

<% if @n_storages.present? %>
    <div class="col-sm-12" style="margin-bottom: 20px;">
      <div class="digg_pagination">
        <div class="page_info">
          <%= page_entries_info @n_storages %>
        </div>
        <%= will_paginate @n_storages, :container => false %>
      </div>
    </div>
<% end %>

<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th>序号</th>
    <th>零件号</th>
    <th>库存总量</th>
  </tr>
  </thead>
  <tbody>
  <% if @n_storages.present? %>
      <% @n_storages.each_with_index do |storage, index| %>
          <tr>
            <td><%= index+@n_storages.offset+1 %>
            <td><%= storage.part.nr if storage.part.present? %></td>
            <td><%= storage.total_qty %></td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>
<% if @n_storages.present? %>
    <div class="digg_pagination">
      <%= will_paginate @n_storages, :container => false %>
    </div>
<% end %>
<script>
    $(function () {
        $(".datepicker").datetimepicker({
            lang: 'ch',
            format: 'Y-m-d H:i'
        });
    });
    init_check();

    $('.up_search').click(function () {
        var this_arrow = $(this);
        $('.all-search').slideToggle(300, function () {
            if (this_arrow.children('i').hasClass('glyphicon-chevron-up')) {
                this_arrow.children('i').attr('class', 'glyphicon glyphicon-chevron-down');
                this_arrow.children('i').attr('title', '展开搜索条件');
            } else {
                this_arrow.children('i').attr('class', 'glyphicon glyphicon-chevron-up');
                this_arrow.children('i').attr('title', '收起搜索条件');
            }
        });
    })
</script>
