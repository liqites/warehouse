<h1>Listing pick_lists</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pick_lists.each do |pick_list| %>
      <tr>
        <td><%= pick_list.id %></td>
        <td><%= pick_list.user_id %></td>
        <td><%= link_to 'Show', pick_list %></td>
        <td><%= link_to 'Edit', edit_pick_list_path(pick_list) %></td>
        <td><%= link_to 'Destroy', pick_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pick list', new_pick_list_path %>
