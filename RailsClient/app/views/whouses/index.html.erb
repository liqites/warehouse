<h1>Listing whouses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">No</th>
      <th colspan="3">ID</th>
      <th colspan="3">Name</th>
      <th colspan="3">Location</th>
    </tr>
  </thead>

  <tbody>
    <% @whouses.each_with_index do |whouse,index| %>
      <tr>
        <td colspan="3"><%= index %>
        <td colspan="3"><%= whouse.id %> </td>
        <td colspan="3"><%= whouse.name %></td>
        <td colspan="3"><%= whouse.location.name if whouse.location %></td>
        <td><%= link_to 'Positions', positions_whouse_path(whouse) %></td>
        <td><%= link_to 'Show', whouse %></td>
        <td><%= link_to 'Edit', edit_whouse_path(whouse) %></td>
        <td><%= link_to 'Destroy', whouse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @whouses, :page_links => false %>
<br>

<%= link_to 'New Whouse', new_whouse_path %>
