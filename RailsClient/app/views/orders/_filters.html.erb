<script type="text/javascript">
  $('body').on('change','.filter-checkbox',function(){
      var filters = [];
      $(".filter-checkbox:checked").each(function(){
          filters.push($(this).val());
      });

      $.get('/orders/filt',{filters:filters},function(data){
          $('#order-list-panel').html(data);
      },'html');
  })
</script>
