<style>
    .col-sm-12 {
        height: 40px;
    }

    .table > thead > tr > th, .table > tbody > tr > td {
        text-align: center;
    }

    .IconA {
        margin: 0 10px;
        font-size: 1.2em;
    }

    .IconA:hover {
        text-decoration: none;
        background-color: white;
    }

    a:hover, a:active {
        text-decoration: none;
        background-color: white;
        color: black;
        outline: none;
    }

    .label {
        font-size: 1em;
    }
</style>

<% if @msg && !@msg.result %>
    <div class="error">
      <%= @msg.content %>
    </div>
<% end %>

<div class="panel panel-default">
  <ol class="breadcrumb" style="background: transparent;padding: 20px 0 0 20px;font-size: 1.2em;">
    <li class="active">运输管理</li>
    <li class="active">
      需求单
    </li>
  </ol>
</div>

<form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">
  <div class="col-sm-12">
    <div class="col-sm-4">
      订单号：
      <input type="text" name="order[id]" value="<%= @id %>"/>
      <input type="hidden" name="order[id_fuzzy]"/>
    </div>
    <!--<div class="col-sm-4">-->
      <!--创建员工工号：-->
      <!--<input type="text" name="order[user_id]" value="<%= @user_id %>"/>-->
      <!--<input type="hidden" name="order[user_id_fuzzy]"/>-->
    <!--</div>-->
    <div class="col-sm-4">
      备货地：
      <%= select_tag('order[source_id]', options_from_collection_for_select(Location.all, 'id', 'name', @source_id), include_blank: true) %>
    </div>
  </div>

  <div class="col-sm-12" style="margin-bottom: 20px;">
    <div class="col-sm-6">
      创建日期：
      <input type="text" name="order[created_at][start]" class="datepicker" value="<%= @created_at_start %>"/>
      ~ <input type="text" name="order[created_at][end]" class="datepicker" value="<%= @created_at_end %>"/>
    </div>
    <div class="col-sm-3">
      <input type="submit" value="查 找" class="btn btn-primary" name="search" style="width: 150px;"/>
    </div>
    <div class="col-sm-3">
      <input type="submit" value="导 出" class="btn btn-primary" name="download" style="width: 150px;"/>
    </div>
  </div>
</form>

<div class="col-sm-12">
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @orders %>
    </div>
    <%= will_paginate @orders, :container => false %>
  </div>
</div>

<table class="table table-bordered table-striped table-hover">
  <thead>
  <tr>
    <th>NO.</th>
    <th>订单号</th>
    <th>要货员</th>
    <th>要货地</th>
    <th>备货地</th>
    <th>是否有紧急需求</th>
    <th>创建时间</th>
    <th>已处理</th>
    <th>订单项目列表</th>
    <th>是否已删除</th>
    <th colspan="3">操作</th>
  </tr>
  </thead>

  <tbody>
  <% @orders.each_with_index do |order, index| %>
      <tr>
        <td><%= index+@orders.offset+1 %></td>
        <td><%= order.id %></td>
        <td><%= order.user.nr %></td>
        <td><%= order.source_location.name %></td>
        <td><%= order.source.name if order.source %></td>
        <td>
          <% if order.is_emergency %>
              <span class="label label-success">是</span>
          <% else %>
              <span class="label label-warning">否</span>
          <% end %>
        </td>
        <td><%= order.created_at.localtime.strftime('%Y-%m-%d %H:%M') %></td>
        <td>
          <% if order.handled %>
              <span class="label label-success">是</span>
          <% else %>
              <span class="label label-warning">否</span>
          <% end %>
        </td>
        <td>
          <%= link_to content_tag(:span, '订单项目列表', :class => 'label label-primary'), order_items_order_path(order) %>

          <span class="badge"><%= order.order_items.count %></span>
        </td>
        <td>
          <% if order.is_delete %>
              <span class="label label-success">是</span>
          <% else %>
              <span class="label label-warning">否</span>
          <% end %>
        </td>
        <td>
          <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-eye-open', :style => 'color:green;'), order, :title => '详情', :class => 'IconA' %>
          <% if current_user.can_edit_inventory? %>
              <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-pencil', :style => 'color:#4F94CD;'), edit_order_path(order), :title => '编辑', :class => 'IconA' %>
              <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-trash', :style => 'color:darkred;'), order, method: :delete, data: {confirm: 'Are you sure?'}, :title => '删除', :class => 'IconA' %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @orders, :container => false %>
</div>
<br>
<script>
    $(function () {
        $(".datepicker").datetimepicker({
            lang: 'ch',
            format: 'Y-m-d H:i'
        });
    });
</script>