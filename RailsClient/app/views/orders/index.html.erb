<h1>需求单列表</h1>

<% if @msg && !@msg.result %>
    <div class="error">
      <%= @msg.content %>
    </div>
<% end %>
<div>
  <form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">
    <div>
      <span>订单号：
        <input type="text" name="order[id]" value="<%= @id %>"/>
        <input type="hidden" name="order[id_fuzzy]"/>
      </span>
      <span>创建员工工号：
          <input type="text" name="order[user_id]" value="<%= @user_id %>"/>
          <input type="hidden" name="order[user_id_fuzzy]"/>
        </span>
    </div>
    <div>
        <span>
        创建日期：
          <input type="text" name="order[created_at][start]" class="datepicker" value="<%= @created_at_start %>"/>
          ~  <input type="text" name="order[created_at][end]" class="datepicker" value="<%= @created_at_end %>"/>
        </span>
    </div>
    <input type="submit" value="查 找" class="btn btn-primary"/>
  </form>
</div>

<br>
<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @orders %>
  </div>
  <%= will_paginate @orders, :container => false %>
</div>

<table class="table table-bordered table-striped globle-table">
  <thead>
    <tr>
      <th>Index</th>
      <th>订单号</th>
      <th>要货员</th>
      <th>要货员工号</th>
      <th>创建时间</th>
      <th>已处理</th>
      <th>订单项目数</th>
      <th>是否已删除</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each_with_index do |order,index| %>
      <tr>
        <td><%= index+@orders.offset+1 %></td>
        <td><%= order.id %></td>
        <td><%= order.user.name %></td>
        <td><%= order.user_id %></td>
        <td><%= order.created_at.localtime %></td>
        <td><%= order.handled %></td>
        <td><%= order.order_items.count %></td>
        <td><%= order.is_delete%></td>
        <td><%= link_to '详细', order %></td>
        <td><%= link_to '编辑', edit_order_path(order) %></td>
        <td><%= link_to '删除', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @orders, :container => false %>
</div>
<br>
