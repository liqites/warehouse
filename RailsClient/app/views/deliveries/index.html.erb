<h2>运单列表</h2>
<div>
  <form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">
    <div>
      <div>
        <span>运单号：
          <input type="text" name="delivery[id]" value="<%= @id %>"/>
          <input type="hidden" name="delivery[id_fuzzy]"/>
        </span>
        <span>创建员工工号：
          <input type="text" name="delivery[user_id]" value="<%= @user_id %>"/>
          <input type="hidden" name="delivery[user_id_fuzzy]"/>
        </span>
        <span>接收员工工号：
          <input type="text" name="delivery[receiver_id]" value="<%= @receiver_id %>"/>
          <input type="hidden" name="delivery[receiver_id_fuzzy]"/>
        </span>
        </span>
        <span>运单状态：
          <%= select 'delivery', 'state', @states, selected: @state, include_blank: true %>
        </span>
        <span>发送地：
          <%= select_tag('delivery[source_id]', options_from_collection_for_select(Location.all, 'id', 'name', @source_id), include_blank: true) %>
        </span>
      </div>
      <div>
        <span>
        发运日期：
          <input type="text" name="delivery[delivery_date][start]" class="datepicker" value="<%= @delivery_date_start %>"/>
          ~  <input type="text" name="delivery[delivery_date][end]" class="datepicker" value="<%= @delivery_date_end %>"/>
        </span>
        <span>
          接收日期：
          <input type="text" name="delivery[received_date][start]" class="datepicker" value="<%= @received_date_start %>"/>
          ~  <input type="text" name="delivery[received_date][end]" class="datepicker" value="<%= @received_date_end %>"/>
        </span>
        <span>
          创建日期：
          <input type="text" name="delivery[created_at][start]" class="datepicker" value="<%= @created_at_start %>"/>
          ~  <input type="text" name="delivery[created_at][end]" class="datepicker" value="<%= @created_at_end %>"/>
        </span>
      </div>
      <div>
        <input type="submit" value="查 找" class="btn btn-primary"/>
      </div>
    </div>
  </form>
</div>
<br/>
<input type="button" value="打印发运单" class='btn btn-warning' onclick="print_delivery_list();"/>
<input type="button" value="打印接收确认单" class='btn btn-info' onclick="print_delivery_confirm_list();"/>
<input type="button" value="打印未接收清单" class='btn btn-success' onclick="print_delivery_unrece_list();"/>
<input type="button" value="打印接收清单" class='btn btn-primary' onclick="print_delivery_reve_list();"/>
<h3><%= link_to '导入离线运单', import_deliveries_path, :class => "btn btn-warning" %></h3>
<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @deliveries %>
  </div>
  <%= will_paginate @deliveries, :container => false %>
</div>
<table class="table table-striped table-condensed table-hover">
  <thead>
  <tr>
    <th></th>
    <th>NO.</th>
    <th>运单号</th>
    <th>状态</th>
    <th>托清单列表</th>
    <th>创建日期</th>
    <th>创建员工</th>
    <th>发运日期</th>
    <th>接收日期</th>
    <th>接收员工</th>
    <th>发送地</th>
    <th>备注</th>
    <th colspan="3">&nbsp;</th>
  </tr>
  </thead>

  <tbody>
  <% @deliveries.each_with_index do |delivery, index|
    delivery_presenter=DeliveryPresenter.new(delivery)
  %>
      <tr>
        <td><input type="checkbox" id="<%= delivery.id %>" class='print-check'></td>
        <td><%= index+@deliveries.offset+1 %></td>
        <td><%= delivery.container_id %></td>
        <td><%= DeliveryState.display(delivery.state) %></td>
        <td><%= link_to '托清单列表', { controller:'deliveries',action: 'forklifts',id:delivery.id } %>
          <span class="badge pull-right"><%= delivery_presenter.forklifts.count %></span>
        </td>
        <td><%= delivery_presenter.created_at %></td>
        <td><%= delivery.user.name if delivery.user %></td>
        <td><%= delivery_presenter.delivery_date %></td>
        <td><%= delivery_presenter.received_date %></td>
        <td><%= delivery_presenter.received_user %></td>
        <td><%= delivery.source_location.name if delivery.source_location %></td>
        <td><%= delivery.remark %></td>
        <td><%= link_to '详细',{ controller:'deliveries',action: 'show',id:delivery.id },class:'btn btn-default' %></td>
        <td><%= link_to '编辑', { controller:'deliveries',action: 'edit',id:delivery.id },class:'btn btn-default' %></td>
        <td><%= link_to '导出数据',{ controller:'deliveries',action: 'export',id:delivery.id },class:'btn btn-default'  %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @deliveries, :container => false %>
</div>
<br>
<script>
    $(function () {
        $(".datepicker").datetimepicker({
            lang: 'ch',
            format: 'Y-m-d H:i'
        });
    });
    init_check();
</script>
