<div class="panel panel-warning">
  <div class="panel-heading">
    <h2>要货报表</h2>
    包括要货，缺货
  </div>
  <div class="panel-body">
    <br/>

    <div>
      <form method="get" action="<%= reports_orders_report_path %>">
        <div>
          <div>
            <span>备货地:
              <%= select_tag(:source_id, options_for_select(Location.list_menu(current_user), @source_id), include_blank: false) %>
            </span>
            <span>时间范围:
              <input type="text" name="date_start" class="datepicker" value="<%= @date_start %>"/>
              ~ <input type="text" name="date_end" class="datepicker" value="<%= @date_end %>"/>
            </span>
            <span>查看类型：
              <%= select_tag :format, options_for_select([["查找", "html"],["导出xlsx", "xlsx"],["导出CSV", "csv"]], "html") %>
            </span>
            <input type="submit" value="确定" class="btn btn-warning" name="commit"/>
          </div>
        </div>
      </form>
    </div>
    <br/>
    <table class="table table-striped table-condensed table-hover">
      <thead>
      <tr>
        <th>No.</th>
        <th>零件号</th>
        <th>总数</th>
        <th>箱数</th>
        <th>部门</th>
        <th>要货人</th>
        <th>状态</th>
      </tr>
      </thead>
      <tbody>
      <% @order_items.each_with_index do |o,index| %>
      <tr>
        <td><%= index+1%></td>
        <td><%= o.part_id%></td>
        <td><%= o.total %></td>
        <td><%= o.box_count%></td>
        <td><%= o.whouse_id%></td>
        <td><%= o.user_id%></td>
        <% if o.out_of_stock %>
        <td><span class="label label-danger">缺货</span></td>
        <% elsif o.is_finished %>
        <td><span class="label label-info" >完成备货</span></td>
        <% else %>
        <td><span class="label label-warning">未处理</span></td>
        <%end%>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
    $(function () {
        $(".datepicker").datetimepicker({
            lang: 'ch',
            format: 'Y-m-d H:i'
        });
    });
    init_check();
</script>