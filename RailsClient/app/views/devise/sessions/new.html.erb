<h2>系统登陆</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :id,'员工号' %><br />
  <%= f.text_field :id, autofocus: true %></div>

  <div><%= f.label :password,'密 码' %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me,'记住我'%></div>
  <% end -%>

  <div><%= f.submit value: '登 陆', class: 'btn btn-primary btn-lg' %></div>
<% end %>
